<%= simple_form_for @product do |f| %>

	<% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

	<%= f.input :name, label: "Item Name" %>

	<%= f.input :price, label: "Price in cents" %>

	<%= f.input :description %>

	<%= f.input :category_id, as: :select, collection: @categories, prompt: 'Select Category', label: false %>

	<%= f.input :condition_id, as: :select, collection: @conditions, prompt: 'Select Condition', label: false %>

  <%= f.input :picture, as: "file", accept: "image/png,image/gif,image/jpeg,image/jpg", label: "Image of Item" %>

  <%= f.button :submit, class: "btn btn-default" %>
  
<% end %>