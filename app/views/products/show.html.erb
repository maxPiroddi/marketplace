<%= render("shared/topnav") %>
<div class="container">
  <p id="notice"><%= notice %></p>

  <td><%= image_tag @product.picture if @product.picture.attached? %></td>

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @product.location %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>