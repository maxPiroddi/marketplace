.jumbotron {
    background-image: linear-gradient(rgba(0, 0, 0, 0.2), #F4D35E), url(<%= asset_path "hero.jpg" %>);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.display-4 {
    color: #fff;
    text-align: center;
}

#hero-search {
    width: 50%;
    margin: 1.5em auto 1.5em 25%;
}

.random-product {
    text-align: center;
    font-size: 1em;
    color: rgb(206, 199, 199);
}

.category-box h2 {
    color: #4E4E4E;
}

.category-row {
    margin-top: 3em;
}

.category-logo {
    display: block;
    width: 10em;
    height: auto;
    margin-left: auto;
    margin-right: auto;
}

.category-card {
    background-color: #f8f8f8;
    border: 0px solid;
    border-radius: 10px;
}

.category-card:hover {
    background-color: #e6e6e6;
}

.card-title {
    text-decoration: none;
    color: black;
    text-align: center;
    padding-bottom: 1em;
}